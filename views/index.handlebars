

<div class="container">
  <div class="jumbotron jumbotron-fluid bg-transparent">
    <div class="container">
      <div class="text-center">
           <img src="/assets/images/burger.jpg" class="rounded" alt="burger">
      </div>
    </div>
  </div>


<h1>Burgers R Us!</h1>

  <panel>
    <form class="create-form">

      <div class="form-group">
        <label for="newburger">Burger Name:</label>
        <input type="text" id="burger" burger_name="name">
        <h3>Enter the burger you want to eat then click the add burger button</h3>
           <button type="submit" class="btn btn-success" id="addburger">Add burger</button>          
      </div>  
    </form>
  </panel>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{> burger/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>


  <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class=" panel-heading" id="leftside"></div>
            <div class="panel-body">
              <ul>
                  {{#each burgers}}
                    {{#unless devoured}}
                       <span><srong> {{this.id}} - {{this.burger_name}}</srong></span>
                        <button type="button" class="devoure btn btn-warning" id="devoure" data-id="{{this.id}}" 
                           data-newDevoured="{{devoured}}"><span class="fa fa-usd"></span></button>
                            {{!-- <li>
                            <p>Type: {{burger_name}}</p>
                            <p>Devoured: {{devoured}}</p>
                            </li> --}}
                  {{/unless}}
                {{/each}}
              </ul>
            </div>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class=" panel-heading" id="rightside"><strong>Devoured Burgers</strong></div>
            <div class="panel-body">
                <ul>
                  {{#each burgers}}
                    {{#if devoured}}
                       <span><srong> {{this.id}} - {{this.burger_name}}</srong></span>
                        {{!-- <button type="button" class="devoure btn btn-warning" id="devoure" data-id="{{this.id}}" 
                           data-newDevoured="{{devoured}}"><span class="fa fa-usd"></span></button> --}}
                            {{!-- <li>
                            <p>Type: {{burger_name}}</p>
                            <p>Devoured: {{devoured}}</p>
                            </li> --}}
                    {{/if}}
                  {{/each}}
              </ul>
            </div>
        </div>
      </div>
  </div>
</div>

<ul>
  {{#each burger}}
  {{#if devoured}}
  {{> burger/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>