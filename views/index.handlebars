<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <span><srong> {{this.id}} - {{this.burger_name}}</srong></span>
  <button type="button" class="devoure btn btn-warning" id="devoure" data-id="{{this.id}}" 
    data-newDevoured="{{devoured}}"><span class="fa fa-usd"></span></button>
    {{!-- <li>
      <p>Type: {{burger_name}}</p>
      <p>Devoured: {{devoured}}</p>
    </li> --}}
  {{/unless}}
  {{/each}}
</ul>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 center-align"><img src="/public/assets/images/burger.jpg"/>Burgers R Us</h1>
  </div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>


  <button type="submit">Add burger</button>
  <h3>Enter the burger you want to eat then click the submit button</h3>
</form>
